<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button name="action_reset" type="object" string="Reintialiser Ã  brouillon"
                            attrs="{'invisible': [('state', '=', 'new')]}" class="oe_highlight"/>
                    <button name="action_offer_received" type="object" string="To Receive"
                            attrs="{'invisible': [('state', 'not in', 'new')]}" class="oe_highlight"/>
                    <button name="action_offer_accepted" type="object" string="To Accept"
                            attrs="{'invisible': [('state', 'not in', ['offer_received'])]}" class="oe_highlight"/>
                    <button name="action_sold" type="object" string="To Sold"
                            attrs="{'invisible': [('state', 'not in', ['offer_accepted'])]}" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <field name="property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="salesperson_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="buyer_id"/>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                </group>
                                <group>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                    <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                    <field name="total_area"/>
                                </group>
                            </group>
                        </page>
                        <page string="Offres">
                            <field name="offer_ids"
                                   attrs="{'readonly': [('state', 'in', ['offer_accepted','sold','canceled'])]}">
                                <form>
                                    <group>
                                        <field name="price"/>
                                        <field name="validity"/>
                                        <field name="date_deadline"/>
                                        <field name="partner_id"/>
                                        <field name="state" invisible="1"/>
                                    </group>
                                </form>
                                <tree decoration-success="state == 'accepted'" decoration-danger="state == 'refused'">
                                    <field name="price"/>
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <field name="partner_id"/>
                                    <field name="state"/>
                                    <button name="action_refuse" type="object" icon="fa-times"/>
                                    <button name="action_accept" type="object" icon="fa-check"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <group>
                                    <field name="salesperson_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties" decoration-success="state in ('offer_received','offer_accepted')"
                  decoration-bf="state == 'offer_accepted'"
                  decoration-muted="state == 'sold'">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="facades"/>
                <field name="garden"/>
                <field name="date_availability" optional="hide"/>
                <field name="selling_price"/>
                <field name="living_area"/>
                <field name="garage"/>
                <field name="garden_area"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Delivery Carrier">
                <field name="name" string="Title"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="facades"/>
                <field name="garden"/>
                <field name="selling_price"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="garage"/>
                <separator/>
                <filter string="Available" name="available" domain="[('state', 'in', ['new','offer_received'])]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available': True}</field>

    </record>

</odoo>