<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="offer_id1" model="estate.property.offer">
        <field name="property_id" ref="estate.property_id1"/>
        <field name="partner_id" ref="base.partner_admin"/>
        <field name="validity">14</field>
        <field name="price">10000</field>
        <field name="create_date" eval="datetime.now() + timedelta(days=2)"/>
    </record>

    <!-- Call Function to set some properties offer as accepted -->
    <function model="estate.property.offer" name="action_accept">
        <value eval="[ref('offer_id1')]"/>
    </function>
    <record id="offer_id2" model="estate.property.offer">
        <field name="property_id" ref="estate.property_id1"/>
        <field name="partner_id" ref="base.partner_admin"/>
        <field name="validity">14</field>
        <field name="price">1500000</field>
        <field name="create_date" eval="datetime.now() + timedelta(days=2)"/>
    </record>
    <record id="offer_id3" model="estate.property.offer">
        <field name="property_id" ref="estate.property_id1"/>
        <field name="partner_id" ref="base.partner_admin"/>
        <field name="validity">14</field>
        <field name="price">1500001</field>
        <field name="create_date" eval="datetime.now() + timedelta(days=2)"/>
    </record>
    <!-- Call Function to set some properties offer as refused -->
    <function model="estate.property.offer" name="action_refuse"
              eval="[[ref('offer_id2'), ref('offer_id3')]]"
              context="{'install_mode': True}"/>

</odoo>