<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_real_estate">
            <field name="name">Real Estate</field>
            <field name="sequence">99</field>
        </record>
        <record model="ir.module.category" id="module_category_real_estate_brokerage">
            <field name="name">Brokerage</field>
            <field name="parent_id" ref="module_category_real_estate"/>
        </record>
        <record model="res.groups" id="estate_group_user">
            <field name="name">Agent</field>
            <field name="category_id" ref="estate.module_category_real_estate_brokerage"/>
        </record>
        <record model="res.groups" id="estate_group_manager">
            <field name="name">Manager</field>
            <field name="category_id" ref="estate.module_category_real_estate_brokerage"/>
            <field name="implied_ids" eval="[(4, ref('estate.estate_group_user'))]"/>
        </record>

        <!--      RULES   -->
        <record id="rule_id" model="ir.rule">
            <field name="name">A description of the rule's role</field>
            <field name="model_id" ref="model_estate_property"/>
            <field name="perm_read" eval="False"/>
            <field name="groups" eval="[(4, ref('estate.estate_group_user'))]"/>
            <field name="domain_force">[
                '|', ('salesperson_id', '=', user.id),
                ('salesperson_id', '=', False)
                ]
            </field>
        </record>

        <record model="ir.rule" id="property_mult_company_rule_id">
            <field name="name">Properties: Multi-company</field>
            <field name="model_id" ref="model_estate_property"/>
            <field name="domain_force">[
                '|', ('company_id', '=', False),
                ('company_id', 'in', company_ids)
                ]
            </field>
        </record>
    </data>
</odoo>